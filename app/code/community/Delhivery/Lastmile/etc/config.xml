<config>
    <modules>
        <Delhivery_Lastmile>
            <version>0.2.0</version>
        </Delhivery_Lastmile>
    </modules>
    <frontend>
        <routers>
            <lastmile>
                <use>standard</use>
                <args>
                    <module>Delhivery_Lastmile</module>
                    <frontName>lastmile</frontName>
                </args>
            </lastmile>
        </routers>
        <layout>
            <updates>
                <lastmile>
                    <file>delhiverylastmile.xml</file>
                </lastmile>
            </updates>
        </layout>
        <translate>
            <modules>
                <Delhivery_Lastmile>
                    <files>
                        <default>Delhivery_Lastmile.csv</default>
                    </files>
                </Delhivery_Lastmile>
            </modules>
        </translate>
    </frontend>
     
    <admin>
        <routers>
            <lastmile>
                <use>admin</use>
                <args>
                    <module>Delhivery_Lastmile</module>
                    <frontName>lastmile</frontName>
                </args>
            </lastmile>
        </routers>
    </admin>
    
    <adminhtml>
        <menu>
            <lastmile module="lastmile">
                <title>Delhivery</title>
                <sort_order>75</sort_order>
                <children>
                    <lastmile module="lastmile">
                        <title>Manage AWB</title>
                        <sort_order>0</sort_order>
						<action>lastmile/adminhtml_lastmile</action>
					</lastmile>
					<pincode module="lastmile">
						<title>Manage Pincode</title>
						<sort_order>2</sort_order>
						<action>lastmile/adminhtml_pincode</action>
					</pincode>						                  
                </children>
            </lastmile>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <lastmile>
                            <title>Delhivery Lastmile</title>
                            <sort_order>11</sort_order>
                            <children>
                                <lastmile>
                                    <title>Manage AWB</title>
                                </lastmile>
                                <pincode>
                                    <title>Manage Pincode</title>
                                </pincode>
                            </children>
                        </lastmile>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <lastmile>
                                            <title>Lastmile Settings</title>
                                        </lastmile>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <lastmile>
                    <file>delhiverylastmile.xml</file>
                </lastmile>
            </updates>
        </layout>
		<events>
            <sales_order_shipment_track_save_after>
                <observers>
                    <lastmile_observer>
                        <type>model</type>
                        <class>Delhivery_Lastmile_Model_Observer</class>
                        <method>sales_shipment_add_tracking</method>
                    </lastmile_observer>
                </observers>
            </sales_order_shipment_track_save_after>
            <sales_order_shipment_track_delete_after>
                <observers>
                    <lastmile_observer>
                        <type>model</type>
                        <class>Delhivery_Lastmile_Model_Observer</class>
                        <method>sales_shipment_remove_tracking</method>
                    </lastmile_observer>
                </observers>
            </sales_order_shipment_track_delete_after>	
            <order_cancel_after>
                <observers>
                    <lastmile_observer>
                        <type>model</type>
                        <class>Delhivery_Lastmile_Model_Observer</class>
                        <method>sales_order_cancel_remove_tracking</method>
                    </lastmile_observer>
                </observers>
            </order_cancel_after>					            
        </events>
    </adminhtml>
    <global>
        <models>
            <lastmile>
                <class>Delhivery_Lastmile_Model</class>
                <resourceModel>lastmile_mysql4</resourceModel>
            </lastmile>
            <lastmile_mysql4>
                <class>Delhivery_Lastmile_Model_Mysql4</class>
                <entities>
                    <lastmile>
                        <table>delhivery_lm_awb</table>
                    </lastmile>
                    <pincode>
                        <table>delhivery_lm_pincode</table>
                    </pincode>
                </entities>
            </lastmile_mysql4>
        </models>
        <blocks>
            <lastmile>
                <class>Delhivery_Lastmile_Block</class>
            </lastmile>   
            <adminhtml>
                <rewrite>
                    <sales_order_invoice_create_tracking>Delhivery_Lastmile_Block_Adminhtml_Sales_Order_Invoice_Create_Tracking</sales_order_invoice_create_tracking>
                </rewrite>
            </adminhtml>						         
        </blocks>
        <helpers>
            <lastmile>
                <class>Delhivery_Lastmile_Helper</class>
            </lastmile>
        </helpers>
        <resources>
            <lastmile_setup>
                <setup>
                    <module>Delhivery_Lastmile</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </lastmile_setup>
            <lastmile_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </lastmile_write>
            <lastmile_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </lastmile_read>
        </resources>
    </global>
    <default>
        <lastmile>
            <lastmile>
                <lastmile_time_delay>3000</lastmile_time_delay>
		<lastmile_autoplay>1</lastmile_autoplay>
                <lastmile_toplink_enabled>1</lastmile_toplink_enabled>
            </lastmile>
        </lastmile>
		<carriers>
            <dlastmile>
                <active>0</active>
                <model>Delhivery_Lastmile_Model_Dlastmile</model>
                <name>Delhivery</name>
                <title>Delhivery Lastmile</title>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
                <gateway_url>http://track.delhivery.com/</gateway_url>
            </dlastmile>
		</carriers>			
    </default>
</config>